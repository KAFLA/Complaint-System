<Window x:Class="ReklamacjeSystem.Views.ComplaintEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ReklamacjeSystem.ViewModels"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" Height="550" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F0F2F5">

    <!-- Ustawienie domyślnego DataContext dla design time -->
    <Window.DataContext>
        <vm:ComplaintEditViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nagłówek okna -->
        <TextBlock Grid.Row="0" Text="{Binding HeaderText}" x:Name="HeaderText"
                   FontSize="24" FontWeight="Bold" Margin="20,20,20,10"
                   HorizontalAlignment="Center" Foreground="#333333"/>

        <!-- Formularz edycji -->
        <Border Grid.Row="1" Background="White" Margin="20,0,20,20" Padding="20" CornerRadius="8">
            <Border.Effect>
                <DropShadowEffect Color="#B0B0B0" Direction="270" ShadowDepth="5" Opacity="0.3" BlurRadius="10"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="Tytuł:" FontSize="14" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" 
                         materialDesign:HintAssist.Hint="Wprowadź tytuł"/>

                <TextBlock Text="Opis:" FontSize="14" Margin="0,10,0,5"/>
                <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" 
                         AcceptsReturn="True" TextWrapping="Wrap" MinHeight="80" VerticalScrollBarVisibility="Auto"
                         materialDesign:HintAssist.Hint="Wprowadź opis"/>

                <TextBlock Text="Status:" FontSize="14" Margin="0,10,0,5"/>
                <ComboBox ItemsSource="{Binding AvailableStatuses}" SelectedItem="{Binding Status}"/>

                <TextBlock Text="Priorytet:" FontSize="14" Margin="0,10,0,5"/>
                <ComboBox ItemsSource="{Binding AvailablePriorities}" SelectedItem="{Binding Priority}"/>

                <TextBlock Text="Przypisane do:" FontSize="14" Margin="0,10,0,5"/>
                <ComboBox ItemsSource="{Binding AvailableUsers}" 
                          DisplayMemberPath="Username" 
                          SelectedItem="{Binding AssignedUser}"/>

                <!-- Komunikat statusu (np. błędu zapisu) -->
                <TextBlock Text="{Binding StatusMessage}" 
                           Style="{StaticResource StatusMessageStyle}" Margin="0,15,0,0"/>
            </StackPanel>
        </Border>

        <!-- Przyciski akcji -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20,0,20,20">
            <Button Content="Anuluj" Command="{Binding CancelCommand}" Background="#6C757D" Margin="0,0,10,0"/>
            <Button Content="Zapisz" Command="{Binding SaveCommand}" Background="#28A745"/>
        </StackPanel>
    </Grid>
</Window>

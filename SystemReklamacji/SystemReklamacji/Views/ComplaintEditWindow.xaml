<Window x:Class="ReklamacjeSystem.Views.ComplaintEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ReklamacjeSystem.ViewModels"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:ReklamacjeSystem.Views"
    mc:Ignorable="d"
        Title="{Binding WindowTitle}" Height="580" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F0F2F5">

    <!-- 🚫 USUNIĘTO BLOK <Window.Resources> DLA KONWERTERA 🚫 -->
    <!-- Konwerter BoolToVisibilityConverter jest teraz globalnie zdefiniowany w App.xaml -->

    <!-- Set default DataContext for design-time -->
    <Window.DataContext>
        <vm:ComplaintEditViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Window Header -->
        <TextBlock Grid.Row="0" Text="{Binding HeaderText}" x:Name="HeaderText"
                   FontSize="24" FontWeight="Bold" Margin="20,20,20,10"
                   HorizontalAlignment="Center" Foreground="#333333"/>

        <!-- Edit Form -->
        <Border Grid.Row="1" Background="White" Margin="20,0,20,20" Padding="20" CornerRadius="8">
            <Border.Effect>
                <DropShadowEffect Color="#B0B0B0" Direction="270" ShadowDepth="5" Opacity="0.3" BlurRadius="10"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="Title:" FontSize="14" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" 
                         materialDesign:HintAssist.Hint="Enter title"
                         IsEnabled="{Binding IsEditMode}"/>

                <TextBlock Text="Description:" FontSize="14" Margin="0,10,0,5"/>
                <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" 
                         AcceptsReturn="True" TextWrapping="Wrap" MinHeight="100" VerticalScrollBarVisibility="Auto"
                         materialDesign:HintAssist.Hint="Enter description"
                         IsEnabled="{Binding IsEditMode}"/>

                <TextBlock Text="Status:" FontSize="14" Margin="0,10,0,5"/>
                <ComboBox ItemsSource="{Binding AvailableStatuses}" SelectedItem="{Binding Status}"
                          IsEnabled="{Binding IsEditMode}"/>

                <TextBlock Text="Priority:" FontSize="14" Margin="0,10,0,5"/>
                <ComboBox ItemsSource="{Binding AvailablePriorities}" SelectedItem="{Binding Priority}"
                          IsEnabled="{Binding IsEditMode}"/>

                <TextBlock Text="Assigned to:" FontSize="14" Margin="0,10,0,5"/>
                <ComboBox ItemsSource="{Binding AvailableUsers}" 
                          DisplayMemberPath="Username" 
                          SelectedItem="{Binding AssignedUser}"
                          IsEnabled="{Binding IsEditMode}"/>

                <!-- Status message (e.g., save error) -->
                <TextBlock Text="{Binding StatusMessage}" 
                           Style="{StaticResource StatusMessageStyle}" Margin="0,15,0,0"/>
            </StackPanel>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20,0,20,20">
            <!-- EDIT BUTTON - VISIBLE ONLY IN VIEW MODE -->
            <Button Content="Edit" Command="{Binding EditCommand}" Background="#007ACC" Margin="0,0,10,0"
                    Visibility="{Binding IsViewMode, Converter={StaticResource BoolToVisibilityConverter}}"/>

            <!-- SAVE AND CANCEL BUTTONS - VISIBLE ONLY IN EDIT MODE -->
            <Button Content="Cancel" Command="{Binding CancelCommand}" Background="#6C757D" Margin="0,0,10,0"
                    Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <Button Content="Save" Command="{Binding SaveCommand}" Background="#28A745"
                    Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisibilityConverter}}"/>
        </StackPanel>
    </Grid>
</Window>

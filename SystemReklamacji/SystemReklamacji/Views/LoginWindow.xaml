<Window x:Class="ReklamacjeSystem.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReklamacjeSystem.Views"
        xmlns:vm="clr-namespace:ReklamacjeSystem.ViewModels"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        mc:Ignorable="d"
        Title="System Obs³ugi Reklamacji - Logowanie" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#F0F2F5">

    <!-- Definicja DataContext, jeœli chcesz podgl¹daæ w designerze (usuñ dla runtime) -->
    <!-- <Window.DataContext>
        <vm:LoginViewModel />
    </Window.DataContext> -->

    <Window.Resources>
        <!-- Style dla TextBox i PasswordBox -->
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="BorderBrush" Value="#DCDCDC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Validation.ErrorTemplate">
                <Setter.Value>
                    <ControlTemplate>
                        <StackPanel>
                            <AdornedElementPlaceholder x:Name="adornedPlaceholder"/>
                            <TextBlock Text="{Binding [0].ErrorContent}" Foreground="Red" FontSize="12" Margin="5,0,0,0"/>
                        </StackPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="BorderBrush" Value="#DCDCDC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Style dla Button -->
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,15"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45A049"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#39803D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style dla ComboBox -->
        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="BorderBrush" Value="#DCDCDC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Style dla TextBlock komunikatów -->
        <Style x:Key="StatusMessageStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Nag³ówek -->
        <StackPanel Grid.ColumnSpan="3" HorizontalAlignment="Center" Margin="0,30,0,20">
            <TextBlock Text="Witaj w Systemie Obs³ugi Reklamacji" FontSize="28" FontWeight="Bold" Foreground="#333333" HorizontalAlignment="Center"/>
            <TextBlock Text="Zaloguj siê lub zarejestruj" FontSize="18" Foreground="#666666" HorizontalAlignment="Center" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Panel formularza logowania/rejestracji -->
        <Border Grid.Row="1" Grid.Column="1" Width="400" Padding="30" Background="White" CornerRadius="10" Effect="{StaticResource MaterialDesignShadowDepth2}"
                HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0">

            <Border.Effect>
                <DropShadowEffect Color="#B0B0B0" Direction="270" ShadowDepth="5" Opacity="0.3" BlurRadius="10"/>
            </Border.Effect>

            <StackPanel>
                <!-- Logowanie -->
                <TextBlock Text="Logowanie" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,15" HorizontalAlignment="Center"/>
                <TextBlock Text="Nazwa u¿ytkownika:" FontSize="14" Margin="0,0,0,2"/>
                <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="Has³o:" FontSize="14" Margin="0,10,0,2"/>
                <!-- U¿ywamy PasswordBox i do³¹czonej w³aœciwoœci dla bezpiecznego has³a -->
                <PasswordBox local:PasswordBoxAssistant.BoundPassword="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                <Button Content="Zaloguj" Command="{Binding LoginCommand}" Background="#007ACC" Margin="0,20,0,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#005A9C"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#004070"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Separator Margin="0,25"/>

                <!-- Rejestracja -->
                <TextBlock Text="Rejestracja" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,15" HorizontalAlignment="Center"/>
                <TextBlock Text="Nazwa u¿ytkownika:" FontSize="14" Margin="0,0,0,2"/>
                <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="Email:" FontSize="14" Margin="0,10,0,2"/>
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="Has³o:" FontSize="14" Margin="0,10,0,2"/>
                <PasswordBox local:PasswordBoxAssistant.BoundPassword="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="Rola:" FontSize="14" Margin="0,10,0,2"/>
                <ComboBox ItemsSource="{Binding AvailableRoles}" SelectedItem="{Binding SelectedRole}"/>

                <Button Content="Zarejestruj" Command="{Binding RegisterCommand}" Background="#4CAF50" Margin="0,20,0,0"/>

                <!-- Komunikat statusu -->
                <TextBlock Text="{Binding StatusMessage}" Style="{StaticResource StatusMessageStyle}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>

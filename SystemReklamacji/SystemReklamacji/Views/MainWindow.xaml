<Window x:Class="ReklamacjeSystem.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ReklamacjeSystem.ViewModels"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="System Obs³ugi Reklamacji" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">

    <!-- Dodaj Style Material Design do zasobów aplikacji (App.xaml) lub tutaj -->
    <!-- W App.xaml by³oby lepiej, ale dla prostoty dodajemy tutaj na razie -->
    <Window.Resources>
        <!-- Styl dla przycisków nawigacyjnych -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,15"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005A9C"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#004070"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style dla TextBlock w menu -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <!-- Styl dla panelu bocznego -->
        <Style TargetType="StackPanel" x:Key="SideMenuPanel">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Padding" Value="15"/>
        </Style>

        <!-- Styl dla nag³ówka User Info -->
        <Style TargetType="TextBlock" x:Key="UserInfoHeader">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,10,0,10"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <!-- Panel boczny -->
            <ColumnDefinition Width="*"/>
            <!-- G³ówna treœæ -->
        </Grid.ColumnDefinitions>

        <!-- Panel boczny / Nawigacja -->
        <StackPanel Grid.Column="0" Style="{StaticResource SideMenuPanel}">
            <!-- Informacje o u¿ytkowniku -->
            <TextBlock Text="Zalogowany u¿ytkownik" Style="{StaticResource UserInfoHeader}"/>
            <TextBlock Text="{Binding CurrentUser.Username}" FontWeight="SemiBold" HorizontalAlignment="Center"/>
            <TextBlock Text="{Binding CurrentUser.Role}" HorizontalAlignment="Center"/>

            <Separator Margin="0,15"/>

            <!-- Przyciski nawigacyjne -->
            <Button Content="Reklamacje" Command="{Binding ShowComplaintsCommand}"/>
            <Button Content="U¿ytkownicy" Command="{Binding ShowUsersCommand}"/>
            <Button Content="Rozwi¹zania" Command="{Binding ShowSolutionsCommand}"/>

            <Button Content="Wyloguj" Command="{Binding LogoutCommand}" Background="#E74C3C" Margin="0,30,0,0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#C0392B"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#A93226"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>

        <!-- G³ówna treœæ (ContentControl dla dynamicznych widoków) -->
        <ContentControl Grid.Column="1" Content="{Binding CurrentViewModel}" Margin="10"/>
    </Grid>
</Window>
